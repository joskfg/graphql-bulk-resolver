{
  "name": "joskfg/graphql-bulk-resolver",
  "type": "library",
  "description" : "GraphQL Bulk Resolver",
  "keywords": ["joskfg", "graphql", "resolver", "bulk", "n plus 1"],
  "license": "MIT",
  "homepage": "https://github.com/joskfg/graphql-bulk-resolver",
  "support": {
    "issues": "https://github.com/joskfg/graphql-bulk-resolver/issues"
  },
  "require": {
    "php": ">=7.0",
    "webonyx/graphql-php": "^0.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "friendsofphp/php-cs-fixer": "^2.4",
    "mockery/mockery": "^1.0",
    "infection/infection": "^0.8.1"
  },
  "autoload": {
    "psr-4": {
      "Joskfg\\GraphQLBulk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Joskfg\\GraphQLBulk\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --coverage-text; php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
    "phpunit": "phpunit --coverage-text",
    "infection": "infection --min-msi=0 --min-covered-msi=0",
    "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
    "fix-cs": "php-cs-fixer fix -v --diff --allow-risky=yes;"
  }
}
